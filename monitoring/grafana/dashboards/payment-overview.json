      },
      "targets": [
        {
          "refId": "A",
          "expr": "resilience4j_circuitbreaker_failure_rate{name=\"kafka-publisher\"}",
          "legendFormat": "Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
