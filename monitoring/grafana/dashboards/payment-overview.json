{
  "id": null,
  "uid": "payment-overview",
  "title": "Payment Service Overview",
  "tags": [
    "payment",
    "observability"
  ],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "graphTooltip": 0,
  "links": [],
  "style": "dark",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m"
    ]
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Authorize/Capture Request Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"ingest-service\",uri=~\"/payments/(authorize|capture|refund).*\"}[5m]))",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Authorize/Capture p95 Latency",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{application=\"ingest-service\",uri=~\"/payments/(authorize|capture|refund).*\"}[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Kafka Consumer Throughput",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kafka_consumer_fetch_manager_records_consumed_total{application=\"consumer-worker\"}[5m]))",
          "legendFormat": "Records/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Error Rate (4xx/5xx)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"ingest-service\",status=~\"4..\"}[5m]))",
          "legendFormat": "4xx"
        },
        {
          "refId": "B",
          "expr": "sum(rate(http_server_requests_seconds_count{application=\"ingest-service\",status=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Circuit Breaker State",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "CLOSED",
          "expr": "max(resilience4j_circuitbreaker_state{name=\"kafka-publisher\",state=\"closed\"}) or on() vector(0)"
        },
        {
          "refId": "OPEN",
          "expr": "max(resilience4j_circuitbreaker_state{name=\"kafka-publisher\",state=\"open\"}) or on() vector(0)"
        },
        {
          "refId": "HALF_OPEN",
          "expr": "max(resilience4j_circuitbreaker_state{name=\"kafka-publisher\",state=\"half_open\"}) or on() vector(0)"
        },
        {
          "refId": "DISABLED",
          "expr": "max(resilience4j_circuitbreaker_state{name=\"kafka-publisher\",state=\"disabled\"}) or on() vector(0)"
        },
        {
          "refId": "FORCED_OPEN",
          "expr": "max(resilience4j_circuitbreaker_state{name=\"kafka-publisher\",state=\"forced_open\"}) or on() vector(0)"
        },
        {
          "refId": "FORCED_HALF_OPEN",
          "expr": "max(resilience4j_circuitbreaker_state{name=\"kafka-publisher\",state=\"forced_half_open\"}) or on() vector(0)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "rgba(128,128,128,0.35)",
                "value": null
              },
              {
                "color": "#73BF69",
                "value": 0.5
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "CLOSED"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "CLOSED"
              }
            ]
          },
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "OPEN"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "OPEN"
              }
            ]
          },
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "HALF_OPEN"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "HALF_OPEN"
              }
            ]
          },
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "DISABLED"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "DISABLED"
              }
            ]
          },
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "FORCED_OPEN"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "FORCED_OPEN"
              }
            ]
          },
          {
            "matcher": {
              "id": "byFrameRefID",
              "options": "FORCED_HALF_OPEN"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "FORCED_HALF_OPEN"
              }
            ]
          }
        ]
      },
      "options": {
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal",
        "reduceOptions": {
          "fields": "",
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Slow Call Rate (%)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "avg(resilience4j_circuitbreaker_slow_call_rate{name=\"kafka-publisher\"})",
          "legendFormat": "Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 25
              },
              {
                "color": "orange",
                "value": 50
              },
              {
                "color": "red",
                "value": 75
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 16
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Failure Rate (%)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "avg(resilience4j_circuitbreaker_failure_rate{name=\"kafka-publisher\"})",
          "legendFormat": "Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "orange",
                "value": 25
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Circuit Breaker Call Metrics",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(resilience4j_circuitbreaker_buffered_calls{kind=\"successful\",name=\"kafka-publisher\"})",
          "legendFormat": "Successful"
        },
        {
          "refId": "B",
          "expr": "sum(resilience4j_circuitbreaker_slow_calls{kind=\"successful\",name=\"kafka-publisher\"})",
          "legendFormat": "Slow"
        },
        {
          "refId": "C",
          "expr": "sum(resilience4j_circuitbreaker_not_permitted_calls_total{name=\"kafka-publisher\"})",
          "legendFormat": "Not Permitted"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      }
    }
  ]
}
