    {
      "id": 8,
      "type": "timeseries",
      "title": "Circuit Breaker Call Metrics",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "resilience4j_circuitbreaker_buffered_calls{kind=\"successful\",name=\"kafka-publisher\"}",
          "legendFormat": "Successful"
        },
        {
          "refId": "B",
          "expr": "resilience4j_circuitbreaker_slow_calls{kind=\"successful\",name=\"kafka-publisher\"}",
          "legendFormat": "Slow"
        },
        {
          "refId": "C",
          "expr": "resilience4j_circuitbreaker_not_permitted_calls_total{name=\"kafka-publisher\"}",
          "legendFormat": "Not Permitted"
        }
      ],
      "fieldConfig": {
        "defaults": {
