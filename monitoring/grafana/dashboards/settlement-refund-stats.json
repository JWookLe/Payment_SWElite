{
  "id": null,
  "uid": "settlement-refund-stats",
  "title": "Settlement & Refund Statistics",
  "tags": ["settlement", "refund", "statistics"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "graphTooltip": 0,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m"]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Settlement Success Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(count(settlement_request_status{status=\"SUCCESS\"}) / count(settlement_request_status)) * 100",
          "legendFormat": "Success Rate %"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 90, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "text": {"titleSize": 18, "valueSize": 60},
        "graphMode": "area",
        "orientation": "auto"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Refund Success Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "(count(refund_request_status{status=\"SUCCESS\"}) / count(refund_request_status)) * 100",
          "legendFormat": "Success Rate %"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 90, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "text": {"titleSize": 18, "valueSize": 60},
        "graphMode": "area"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Settlement Dead Letters",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "count(settlement_request_status{status=\"FAILED\", retry_count>=\"10\"})",
          "legendFormat": "Dead Letters"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "text": {"titleSize": 18, "valueSize": 60},
        "graphMode": "area"
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Refund Dead Letters",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "count(refund_request_status{status=\"FAILED\", retry_count>=\"10\"})",
          "legendFormat": "Dead Letters"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "red"}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "text": {"titleSize": 18, "valueSize": 60},
        "graphMode": "area"
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Settlement Request Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(settlement_request_total[5m])",
          "legendFormat": "Requests/sec"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Refund Request Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(refund_request_total[5m])",
          "legendFormat": "Requests/sec"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 7,
      "type": "piechart",
      "title": "Settlement Status Distribution",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "count by (status) (settlement_request_status)",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "options": {
        "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
        "pieType": "pie",
        "displayLabels": ["percent"]
      }
    },
    {
      "id": 8,
      "type": "piechart",
      "title": "Refund Status Distribution",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "count by (status) (refund_request_status)",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "options": {
        "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
        "pieType": "pie",
        "displayLabels": ["percent"]
      }
    }
  ]
}
