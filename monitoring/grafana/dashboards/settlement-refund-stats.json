{
  "id": null,
  "uid": "settlement-refund-stats",
  "title": "Settlement & Refund Statistics",
  "tags": ["settlement", "refund", "statistics"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 4,
  "refresh": "30s",
  "editable": true,
  "graphTooltip": 0,
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m"]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Settlement Success Rate",
      "datasource": {
        "type": "mysql",
        "uid": "mariadb"
      },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT NOW() as time, ROUND((SUM(CASE WHEN status = 'SUCCESS' THEN 1 ELSE 0 END) / COUNT(*)) * 100, 2) as value FROM settlement_request WHERE requested_at > NOW() - INTERVAL 7 DAY",
          "format": "time_series"
        }
      ],
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 90, "color": "yellow"},
              {"value": 95, "color": "green"}
            ]
          },
          "decimals": 2
        }
      },
      "options": {
        "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
        "text": {},
        "graphMode": "area",
        "orientation": "auto"
      }
    },
